    <script type="text/javascript">
        $(function () {

           $('#select_type').on("change",function () {
               $("#datetimepicker6").data("DateTimePicker").minDate(null)
               $("#datetimepicker7").data("DateTimePicker").minDate(null)
               $('#datetimepicker6').data("DateTimePicker").clear()
               $('#datetimepicker7').data("DateTimePicker").clear()
               timeDate()

           })
            function timeDate() {
                var startDate = moment();

                $('#datetimepicker6').datetimepicker({
                    allowInputToggle: true,
                    useCurrent: false,
                    minDate: startDate,
                    format: 'MMM DD, YYYY',
                });

                $("#datetimepicker6").on("dp.change", function (e) {
                    var expres = $('#select_type').val()
                    var end
                    if(expres == 2){
                        end = moment(e.date._d).add(2, 'd');
                    }else if(expres ==3){
                        end = moment(e.date._d).add(7, 'd');
                    }else if(expres ==4){
                        end = moment(e.date._d).add(30, 'd');
                    }
                    if(e.date) {
                        console.log( e.date._d)
                        $('#datetimepicker7').datetimepicker({
                            allowInputToggle: true,
                            useCurrent: false,
                            format: 'MMM DD, YYYY',
                            minDate: e.date._d
                        });
                        $('#datetimepicker7').data("DateTimePicker").maxDate(end._d);
                    }
                });
                $("#datetimepicker7").on("dp.change", function (e) {
                    $('#datetimepicker6').data("DateTimePicker").maxDate(e.date);
                });
            }

            timeDate()
        });
    </script>
    <script>

        var isTop = $(".navbar").offset().top < 50;

        handleResize();

        $(window).scroll(function () {
            handleResize();
        });
        $(window).resize(function () {
            handleResize();
        });

        function handleResize() {
            var navbarTopThreshold = 0;
            var navbarBottomThreshold = 50;
            var windiwWidthThreshold = 751;

            var navbarScroll = $(".navbar").offset().top;
            var windowWidth = $(window).width();
            var isWide = windowWidth > windiwWidthThreshold;

            if (isTop) {
                if (navbarScroll > navbarBottomThreshold) {
                    isTop = false;
                }
            } else {
                if (navbarScroll == navbarTopThreshold) {
                    isTop = true;
                }
            }

            if (isWide) {
                if (isTop) {
                    $(".page-scroll").css("color", "#ffffff");
                    $(".navbar-brand").css({
                        "background-image": "url({{ asset('img/logo.png') }})",
                        "height": "49px",
                        "margin-left": "-15px"
                    });
                } else {
                    $(".page-scroll").css("color", "#ffffff");
                    $(".active").css("color", "#ffffff");
                    $(".navbar-brand").css({
                        "background-image": "url({{ asset('img/logo.png') }})",
                        "height": "49px",
                        "margin-left": "-15px"
                    });
                }
            } else {
                if (isTop) {
                    $(".icon-bar").css("background-color", "#333333");
                    $(".page-scroll").css("color", "#ffffff");
                    $(".navbar-brand").css({
                        "background-image": "url({{ asset('img/logo.png') }})",
                        "height": "49px",
                        "margin-left": "15px",
                        "margin-top": "0px"
                    });
                    $(".navbar-toggle:hover,.navbar-toggle:focus").css({"background-color": "#ffffff"});
                    $(".navbar-collapse").css({"background-color": "#333333"});
                } else {
                    $(".icon-bar").css("background-color", "#333333");
                    $(".page-scroll").css("color", "#ffffff");
                    $(".navbar-brand").css({
                        "background-image": "url({{ asset('img/logo.png') }})",
                        "height": "49px",
                        "margin-left": "15px",
                        "margin-top": "0px"
                    });
                    $(".navbar-toggle:hover,.navbar-toggle:focus").css({"background-color": "#ffffff"});
                    $(".navbar-collapse").css({"background-color": "#333333"});
                }
            }
        }
    </script>
