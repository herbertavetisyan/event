{% extends ":tenders:base.html.twig" %}

{% block body %}
    <div class="content" style="float: right;margin-top: -420px;">
        {% for value in property.toArray.items %}
            <div class="row" style="width: 1100px;">
                <div class="col-lg-3 col-md-3 col-sm-3"></div>
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12 same-tender">
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <img src="{% path value.type.image, 'reference' %}" alt="">
                        <h4>Բյուջե</h4>
                        <p>{{ value.budget|number_format(0, '.') }} ՀՀ դրամ</p>
                        <h4>Ժամանակահատված</h4>
                        <p>{{ value.start|date("Y/m/d H:i") }}- {{ value.end|date("Y/m/d H:i") }}</p>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <p>ID <span class="item-description">{{ value.id }}</span></p>
                        <p>Պատվիրատու <span class="item-description">{{ value.owner.companyName }}</span></p>
                        <p>Հրապարակման օր <span class="item-description">{{ value.createdAt|date("Y/m/d H:i") }}</span></p>
                        <p>Խմբագրվել Է <span class="item-description">{{ value.updatedAt|date("Y/m/d H:i") }}</span></p>
                        <h4>Համառոտ բնութագիր</h4>
                        <p style="width: 490px;">{{ value.overview|truncate(300) }}</p>
                        <div class="text-right">
                            <a href="{{ path('get_property',{"id":value.id}) }}">
                                <button class="detailed">Մանրամասն</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div >
            <nav aria-label="Page navigation example" class="text-center">
                <ul class="pagination ">
                    {% if property.toArray._links.prev  is defined %}
                        <li class="page-item"><a class="page-link"  href="{{ property.toArray._links.prev }}">Նախորդ</a></li>
                        <li class="page-item"><a class="page-link"  href="{{ property.toArray._links.last }}">Վերջին</a></li>
                    {% endif %}
                    {% if property.toArray._links.next  is defined %}
                        <li class="page-item"><a class="page-link"  href="{{ property.toArray._links.next }}">Հաջորդ</a></li>
                    {% endif %}

                </ul>
            </nav>
        </div>
    </div>
{% endblock %}